@model MujZavod.Admin.Models.RaceRegistration.RaceRegistrationViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = Model.inIframe ? "~/Views/Shared/_LayoutPresentation.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.flash.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js"></script>

}

<div class="panel-body form-horizontal">

    <div class="row">
        <div class="col-sm-4">
            @Html.LabelValueRowFor(x => x.Name, 4, 8)
        </div>
        <div class="col-sm-4">
            @Html.LabelValueRowFor(x => x.Date, 4, 8)
        </div>
        <div class="col-sm-4">
            @Html.LabelValueRowFor(x => x.SignToDate, 4, 8)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @Html.LabelFor(x => x.Description)
            <div>
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
    @if (Model.PublishDate.HasValue && !Model.EndDate.HasValue)
    {
        <button id="btnRegister" class="btn btn-block">Přihlásit na závod</button>
    }
    @if (Model.EndDate.HasValue)
    {
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    Výsledky závodu
                </div>
            </div>
            <div class="panel-body">
                <ul class="nav nav-tabs tab-resize-nav nav-xs" id="tab-resize-tabs">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="@(category.Id == Model.Categories[0].Id ? "active" : "")"><a data-toggle="tab" href="#category-tab-@(category.Id)">@category.Name</a></li>
                    }
                </ul>
                <div id="divRaceCategoryContent" class="tab-content">
                    @foreach(var category in Model.Categories)
                    {
                        <div class="tab-pane @(category.Id == Model.Categories[0].Id ? "active" : "")" id="category-tab-@(category.Id)">
                            @Html.Partial("/Views/RaceRegistration/RaceCategory.cshtml", category)
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        new MujZavod.Registration({
            wrapper: '#btnRegister',
            url: '@System.Web.Configuration.WebConfigurationManager.AppSettings.Get("webUrl")',
            raceKey: '@Model.RaceKey'
        });
    });
</script>